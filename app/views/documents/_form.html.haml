= form_for(@document) do |f|

  - if @document.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@document.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @document.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :content
    %br
    = f.text_area :content

  .actions
    = f.submit
