%h1= t('.title')
%p= link_to t('.new_document'), new_document_path

%table
  %thead
    %tr
      %th= Document.human_attribute_name :interview
      %th= Document.human_attribute_name :content
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for document in @documents
      %tr{ :class => cycle(:odd, :even) }
        %td= document.interview
        %td= document.content
        %td.action= link_to t('show'), document
        %td.action= link_to t('edit'), edit_document_path(document)
        %td.action= link_to t('destroy'), document, :confirm => t('are_you_sure'), :method => :delete
